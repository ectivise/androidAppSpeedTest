<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ssidLayout"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:animateLayoutChanges="false"
    android:fadeScrollbars="false">


    <TextView
        android:id="@+id/pingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ping"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/statusAPTextView"
        app:layout_constraintTop_toBottomOf="@+id/statusAPTextView" />

    <TextView
        android:id="@+id/ssidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:text="SSID"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uploadTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:text="upload"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/statusAPTextView"
        app:layout_constraintTop_toTopOf="@+id/downloadTextView" />

    <TextView
        android:id="@+id/downloadTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="download"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/statusAPTextView"
        app:layout_constraintTop_toTopOf="@+id/pingTextView" />

    <TextView
        android:id="@+id/statusAPTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="status: normal"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/ssidTextView"
        app:layout_constraintTop_toBottomOf="@+id/ssidTextView" />

    <TextView
        android:id="@+id/runtimessidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:text="runtime"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/ssidTextView"
        app:layout_constraintTop_toTopOf="@+id/statusAPTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>